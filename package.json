{
  "name": "xzq-notes",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "format": "prettier . --cache --write",
    "build:path:root": "cross-env DEPLOY_BASE=/ npm run build",
    "build:path:notes": "cross-env DEPLOY_BASE=/notes/ npm run build",
    "addDocTitle": "node ./scripts/updateMdFrontmatter.mjs --type addTitle --scan-pattern './src/content/docs/**/*.md' --base-path cwd",
    "removeDocFrontmatter": "node ./scripts/updateMdFrontmatter.mjs --type removeFrontmatter --scan-pattern './src/content/docs/**/*.md' --base-path cwd"
  },
  "dependencies": {
    "@astrojs/starlight": "^0.30.3",
    "astro": "^5.1.1",
    "sharp": "^0.32.6",
    "starlight-image-zoom": "^0.10.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/minimist": "^1.2.5",
    "cross-env": "^7.0.3",
    "globby": "^14.0.2",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.2.11",
    "lodash-es": "^4.17.21",
    "magic-string": "^0.30.17",
    "minimist": "^1.2.8",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "simple-git-hooks": "^2.11.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "prettier . --write"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.1"
}
